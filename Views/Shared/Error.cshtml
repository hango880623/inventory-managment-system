@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                <h2 class="text-danger">Oops! Something went wrong.</h2>
                <p class="text-muted">An error occurred while processing your request.</p>
                
                @if (Model?.ShowRequestId == true)
                {
                    <p class="text-muted">
                        <small>Request ID: <code>@Model.RequestId</code></small>
                    </p>
                }
                
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home me-1"></i>Go Home
                    </a>
                    <button onclick="history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
